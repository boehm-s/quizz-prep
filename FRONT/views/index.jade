extends layout

block head
  link(rel='stylesheet', href='/css/index.css')
block body
  header.row
    h1.col-xs-12= title
  form#connexion.row
    .col-xs-6.col-xs-offset-3
      input#login.form-control(type='text', placeholder='login')
    .col-xs-6.col-xs-offset-3
      input#password.form-control(type='password', placeholder='password')
    #submit.col-xs-6.col-xs-offset-3
      input.btn.btn-info(type='submit', placeholder='password', value='valider')
block scripts
  script(src='/js/index.js')